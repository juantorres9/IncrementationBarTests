<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_button0"
    >



    <ImageView
        android:id="@+id/imageButtonLX"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/ic_button_left"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/custom_image_view_global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:gravity="center"
        android:background="@drawable/ic_button_center"/>

    <TextView
        android:id="@+id/custom_text_viewX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/imageButtonRX"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/ic_button_right"
        android:layout_alignParentEnd="true"

        />


</RelativeLayout>